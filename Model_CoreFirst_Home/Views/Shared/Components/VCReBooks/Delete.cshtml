@model IEnumerable<Model_CoreFirst_Home.Models.ReBook>

@{
    Layout = null;
}
@if (Model.Count() != 0)
{
    //4.3.3 將Delete View重新排版並加入刪除回覆留言的按鈕
    <div class="p-4">
        @foreach (var item in Model)
        {
            <div class="text-truncate" style="max-width:800px">@item.Description</div>
            <div class="text-end">@Html.DisplayFor(modelItem => @item.Author) | @Html.DisplayFor(modelItem => @item.TimeStamp) | <a href="#" class="btn btn-outline-danger btn-sm">刪除</a></div>
            <hr />
        }
    </div>
}