@model IEnumerable<Model_CoreFirst_Home.Models.ReBook>

@foreach (var item in Model)
{
    <div class="d-flex justify-content-between align-items-center border-bottom p-2">
        <div>
            <strong>@item.Author 說：</strong>
            @item.Description
        </div>
        <div class="d-flex align-items-center">
            <span class="text-muted me-2">@item.TimeStamp</span>
            @if (ViewBag.IsDel == true)
            {
                <button type="button"
                        class="btn btn-danger btn-sm delete-rebook"
                        onclick="delReBook('@item.ReBookID', '@item.BookID')">
                    刪除
                </button>
            }
        </div>
    </div>
}